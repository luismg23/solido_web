%nav.navbar.navbar-expand-lg.navbar-light.bg-light{ style: "min-width: 200px;" }
  .container
    %a.navbar-brand{href: "/home/index"} SAP
    %button.navbar-toggler{"type" => "button", "data-toggle" => "collapse", "data-target" => "#navbarNav", "aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation"}
      %span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      %ul.navbar-nav.mr-auto
        - if user_signed_in?
          %li.nav-item
            %a.nav-link{href: "/companies/"} Empresas
          %li.nav-item
            %a.nav-link{href: "/banks/"} Bancos
          %li.nav-item
            %a.nav-link{href: "/suppliers/"} Proveedores
          %li.nav-item
            %a.nav-link{href: "/budgets/"} Presupuestos
          %li.nav-item
            %a.nav-link{href: "/bulk_upload/"} Carga
          %li.nav-item
            %a.nav-link{href: "/backups/"} Backups
          %li.nav-item
            %a.nav-link{href: "/users/"} Usuarios

      - if user_signed_in?
        .nav-item.dropdown
          = link_to '#', class: 'text-secondary nav-link dropdown-toggle', id: 'navbarDropdown', role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' } do
            %i.fa.fa-user-circle
            @current_profile ? "#{@current_profile.firstname} #{@current_profile.lastname}" : ''
          .dropdown-menu{ aria: { labelledby: 'navbarDropdown' } }
            = link_to "Mi Perfil", destroy_user_session_path, class: 'dropdown-item'
            = link_to "Configuración", destroy_user_session_path, class: 'dropdown-item'
            .dropdown-divider
            = link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: 'dropdown-item text-danger'
      - else
        = link_to "Iniciar Sesión", new_user_session_path, class: 'nav-link btn'
