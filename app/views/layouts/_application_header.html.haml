  = csrf_meta_tags
  = csp_meta_tag
  = action_cable_meta_tag
  = javascript_importmap_tags
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  = favicon_link_tag asset_path('favicon.png')

  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }

  %script{ async: true, src: "https://www.googletagmanager.com/gtag/js?id=G-KQKNMNTXHJ" }
  :javascript
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-KQKNMNTXHJ');

  = javascript_include_tag 'https://cdn.jsdelivr.net/npm/chart.js'
  = javascript_include_tag 'https://cdn.jsdelivr.net/npm/chartkick'
  = stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'

- if show_navbar?
  = render 'layouts/navbar'
