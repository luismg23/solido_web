.centered-image
  = image_tag("lock-login.png", alt: "Iniciar Sesión", width: "300", height: "250")

.text-center
  %h1 Crear Cuenta
.text-center
  %h5 Ingresa un e-mail y contraseña

.container
  .row.justify-content-center
    .col-md-6
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group
          = f.label 'E-mail', class: 'col-form-label'
          = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email'

        .form-group
          = f.label 'Password', class: 'col-form-label'
          = f.password_field :password, autocomplete: "new-password", class: 'form-control', autocomplete: "new-password"      

        .form-group
          = f.label 'Confirma tu password', class: 'col-form-label'
          = f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password"

        .form-group
          = f.submit "Crear Cuenta", class: 'btn btn-primary'
