= form_for budgetline, html: { class: "form" } do |f|
  = f.hidden_field :IdInternoPresupuesto, value: budget_id

  .form-group.mb-3
    = f.label :cve_renglon_presupuestal, "Clave", class: "form-label"
    = f.text_field :cve_renglon_presupuestal, class: "form-control"

  .form-group.mb-3
    = f.label :nombre_renglon_presupuestal, "Nombre", class: "form-label"
    = f.text_field :nombre_renglon_presupuestal, class: "form-control"

  .form-group.mb-3
    = f.label :monto_presupuestado, "Monto", class: "form-label"
    = f.text_field :monto_presupuestado, class: "form-control"

  .actions.d-flex.justify-content-end
    = f.submit 'Guardar', class: "btn btn-success", id: "saveButton", disabled: false
